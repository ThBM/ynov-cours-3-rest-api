generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Terrain {
  id                   String            @id @default(uuid()) @db.Uuid
  nom                  String
  latitude             Float
  longitude            Float
  surface              Float
  surfaceConstructible Float
  prix                 Float
  longueurFacade       Float
  orientationFacade    OrientationFacade
}

enum OrientationFacade {
  NORD
  SUD
  EST
  OUEST
}
